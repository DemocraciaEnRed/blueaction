.topic-card
  display block
  margin 15px
  width 260px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  overflow hidden
  color inherit
  cursor pointer
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')
  background-color #fff

  &:hover
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)

  .topic-cover
    position relative
    width 100%
    background-size cover
    background-color #f0f0f0
    background-position center center

    &:after
      content ''
      display block
      padding-top 62%

  .topic-title
    font-weight 100
    margin 10px 10px 0

  .topic-participants
    margin 5px 10px 8px
    color #555
    font-size .7em
